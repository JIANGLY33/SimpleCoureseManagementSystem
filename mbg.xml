<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 阻止注释生成 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- 配置数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/techmansys?serverTimezone=UTC"
                        userId="Jiang"
                        password="13968657736ku">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 指定java bean的生成位置 -->
        <javaModelGenerator targetPackage="com.jalinyiel.coursystem.system.domain" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 指定sql映射文件的生成位置 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 指定dao接口的生成位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.jalinyiel.coursystem.system.repository"  targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 为每张表指定具体的生成方式 -->
        <table tableName="student" domainObjectName="Student" />
        <table tableName="course" domainObjectName="Course"/>
        <table tableName="teacher" domainObjectName="Teacher"/>
        <table tableName="user" domainObjectName="User"/>
        <table tableName="choose" domainObjectName="Choose"/>
        <table tableName="teach" domainObjectName="Teach"/>

    </context>
</generatorConfiguration>